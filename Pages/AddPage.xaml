<Page x:Class="WpfApp6.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid Background="White">
        <StackPanel MinWidth="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock Text="Login"/>
            <TextBox x:Name="LoginTxb"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="PasswordTxb"/>

            <TextBlock Text="Famili"/>
            <TextBox x:Name="FamilTxb"/>
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameTxb"/>
            <TextBlock Text="LNAme"/>
            <TextBox x:Name="LNAmeTxb"/>
            <TextBlock Text="DataRogdenia"/>
            <DatePicker x:Name="BDPicker"/>
            <TextBlock Text="Role"/>
            <ComboBox x:Name="CmbBoxRole"
          DisplayMemberPath="Title"/>
            <Button Content="Сохраниь"
            Click="SaveBtn"/>
        </StackPanel>
    </Grid>
</Page>
